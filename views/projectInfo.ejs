<% layout('./layouts/boilerplate2')%>
    <div class="container-fluid mb-4">
      <div class="ProjectName">
        <h1><%=project.title%></h1>
      </div>
    <div class="ProjectView">
      <div class="ProjectVPhoto">
        <div id="campgroundCarousel" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
              <% project.images.forEach((img, i) => {  %>
              <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                  <img src="<%= img.url%>" class="d-block w-100" alt="<%=project.title%>'s Image" style="height: 300px;">
              </div>
              <% }) %>

          </div>
          <% if(project.images.length > 1) {%>
          <a class="carousel-control-prev" href="#campgroundCarousel" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#campgroundCarousel" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
          </a>
          <% } %>
      </div> 
      </div>
      <div class="ProjectVInfo">
        <h1 class="normal"><%=project.shortInfo%></h1>

        <p class="hide"><%=project.info%></p>
        <button class="infobutton">Info <i class="fa fa-refresh"></i></button>
      </div>
    </div>
    <div class="ProjectOthers">
      <div class="ProjectComment">
        <div class="addComment">
          <h2>Leave a Comment</h2>
          <% if(currentUser) {%>
            <form action="/project/<%=accountID%>/<%=project._id%>/<%=currentUser._id%>/comment" id="addComment" method="POST">
              <fieldset class="starability-basic">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                    aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
            <div class="mb-3">
                <label class="form-label" for="body">Review Text</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-success">Submit</button>
            </form>
            <% } else {%>
              <form action="/project/comment/<%=accountID%>/<%=project._id%>" id="addComment" method="POST">
                <textarea class="comment" id="comment" name="text" placeholder="Type your comment..." rows="5" cols="50"
                  maxlength="500" required></textarea><br>
                <input type="submit" class="bg-info">
              </form>
              <% }%>
          
        </div>
        <div class="allComments">
          <h2>All comments</h2><br>
          <div id="allComments">
            <ul>
              <% for(let review of reviews) { %>
              <li><% if(review.imageURL){%>
                <img src="<%= review.imageURL %>" id="profileImage"  style="height: 40px; width: 40px;">
                <%}else{%>
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRiZfk_mBRRAnMVpDjIrMbiU5DUxjWeZ5nqRQ&usqp=CAU" id="profileImage"  style="height: 40px; width: 40px;">
                <%}%><%= review.author %>:</li>
              <p class="starability-result" data-rating="<%=review.rating%>">
                Rated: <%= review.rating %> stars
            </p>
              <li><%= review.body %></li>

              <li class="text-muted"><% 
                const currentDate = new Date();
                const commentDate = new Date(review.date);
                const diffMs = currentDate - commentDate; // Difference in milliseconds
                const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
                const diffHours = Math.floor((diffMs % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const diffMinutes = Math.floor((diffMs % (1000 * 60 * 60)) / (1000 * 60));
                
                if (diffDays > 0) {
                  %><%= diffDays %> days ago<%
                } else if (diffHours > 0) {
                  %><%= diffHours %> hours ago<%
                } else {
                  %><%= diffMinutes %> minutes ago<%
                }
              %></li><br>
              <% if(currentUser && (currentUser._id == accountID || review.username === currentUser.username)) {%>
                <form action="/project/<%=accountID%>/<%=project._id%>/<%=review._id%>?_method=DELETE" method="POST">
                  <button class="btn btn-sm btn-danger">Delete</button>
              </form>
                <% } %>
                <hr>
              <% }%>
          </ul>
          </div>
        </div>
       
        
      </div>
      <div class="ProjectRec">
        <h1>Recommended project</h1><hr><br>
        <% for(let project of projects){ %>
          <% if(currentUser) { %>
            <a href="/project/<%=currentUser._id%>/<%=accountID%>/<%=project._id%>" style="text-decoration: none; color: black;">
                    <h5 class="card-title"><%= project.title %></h5>
                  </a><hr>
              <% } else {%>
                <a href="/project/<%=accountID%>/<%=project._id%>" style="text-decoration: none; color: black;">
                    <h5 class="card-title"><%= project.title %></h5>
                  </a><hr>
               <%} %>
          
          <% }%>
        <div>
        </div>
      </div>
    </div>
  </div>