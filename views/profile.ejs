<% layout('./layouts/boilerplate2')%>
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-3 bg-white border-2 border-dark" style=" box-shadow: 10px 10px 50px 5px rgb(77, 78, 78);">
                    <div class="container d-flex justify-content-center mt-3">
                      
                        <% if(currentUser.image){%>
                            <img src="<%= currentUser.image.url %>" id="profileImage"  style="height: 60%; width: 60%;">
                            <%}else{%>
                                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRiZfk_mBRRAnMVpDjIrMbiU5DUxjWeZ5nqRQ&usqp=CAU" id="profileImage"  style="height: 200px; width: 200px;">
                            <%}%>
                    </div>
                

                <div class="container bg-white mt-3 mb-5" style="min-height: 500px;">
                  <h6 style="text-align: center;"><sub>Username</sub></h6>
                  <h2 style="font-weight: bold; text-align: center;"><%= currentUser.username %></h2>
                  <h6>First Name: <%= currentUser.firstname %></h6>
                  <h6>Last Name: <%= currentUser.lastname %></h6>
                  <h6>Birthdate: <%= new Date(currentUser.birthday).toISOString().split('T')[0] %></h6>
                  <h6>Address: <%= currentUser.country %>/<%= currentUser.city %></h6>
                  <h6>Zipcode: <%= currentUser.zipcode %></h6>
                  <h6>Contact Number: <%= currentUser.phonenumber %></h6>
                  <h6>Email Address: <%= currentUser.email %></h6>
                  <button type="button" class="btn btn-info mt-3"><a href="/renderProfileEdit" style="color: white; text-decoration: none;">Update profile</a></button>
                </div>
            </div>
            <div class="col-1" style="backdrop-filter: blur(30px);">
                
            </div>
            <div class="col-5  bg-white border border-dark" style=" box-shadow: 10px 10px 50px 5px rgb(77, 78, 78);">
              
                <% if(currentUser.projects.length > 0) { %>
                    <h1 style="margin-top: 10px;">Your projects : </h1>
                    <div class="container-fluid mt-5">
                            <% for(let project of currentUser.projects) {%>
                              
                                <div class="card rounded mb-3">
                                  <div class="col">
                                  
                                    <div class="row">
                                      <div id="campgroundCarousel" class="carousel slide" data-ride="carousel">
                                        <div class="carousel-inner">
                                            <% project.images.forEach((img, i) => {  %>
                                            <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                                              <a href="/project/<%=currentUser._id%>/<%=currentUser._id%>/<%=project._id%>">
                                                <img src="<%= img.url%>" class="d-block w-100" alt="<%=project.title%>'s Image" style="height: 300px;"></a>
                                            </div>
                                            <% }) %>
                            
                                        </div>
                                        <% if(project.images.length > 1) {%>
                                        <a class="carousel-control-prev" href="#campgroundCarousel" role="button" data-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="carousel-control-next" href="#campgroundCarousel" role="button" data-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                        <% } %>
                                    </div>  
                                  </div>
                                <div class="row">
                                  <div class="card-body">
                                    <a href="/project/<%=currentUser._id%>/<%=currentUser._id%>/<%=project._id%>" style="text-decoration: none; color: black;">
                                      <h5 class="card-title"><span class="text-muted">Title: </span><%= project.title %></h5>
                                    </a>
                                    
                                      <p class="card-text"><span class="text-muted">Info: </span><%=project.shortInfo%></p><br>
                                  </div>
                                </div>
                                <div class="row">
                                  <div class="card-footer text-muted w-100">
                                    
                                <li class="text-muted">Published: <% 
                                  const currentDate = new Date();
                                  const commentDate = new Date(project.date);
                                  const diffMs = currentDate - commentDate; // Difference in milliseconds
                                  const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
                                  const diffHours = Math.floor((diffMs % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                                  const diffMinutes = Math.floor((diffMs % (1000 * 60 * 60)) / (1000 * 60));
                                  
                                  if (diffDays > 0) {
                                    %><%= diffDays %> days ago<%
                                  } else if (diffHours > 0) {
                                    %><%= diffHours %> hours ago<%
                                  } else {
                                    %><%= diffMinutes %> minutes ago<%
                                  }
                                %></li>
                                <p><%=project.viewCounter%> view </p>
                                  </div>
                                  <div class="card-body">
                                    <a class="card-link btn btn-info" href="/proje/<%=currentUser._id%>/<%=project._id%>/edit">Edit</a>
                                    <form class="d-inline" action="/project/<%=currentUser._id%>/<%=project._id%>?_method=DELETE" method="POST">
                                        <button class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                                </div>
                                
                              </div>
                          </div>
                              <% }%>
                    </div>
                    <% } else { %>
                        <h1>No project exists</h1>
                        <% } %>
            </div>
            <div class="col-1" style="  backdrop-filter: blur(30px);">
                
            </div>
            <div class="col-2 bg-white pt-5 border border-dark" style=" box-shadow: 10px 10px 50px 5px rgb(77, 78, 78);">
              <h2>Add Project</h2>
              <button class="btn btn-dark text-white"><a href="/myAccount" style="color: white; text-decoration: none;">add project</a></button>
            </div>
        </div>
    </div>